<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('bootstrapcss') %>
        <title>Profile Page</title>
</head>

<body>
    <%- include('header') %>
    <br>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-4">
                    <h4>UserName: <%= user.username %></h4>

                    <h4>Name: <%= user.name %></h4>

                    <h2>Doubts Asked:</h2>

                    <% doubts.forEach((doubt) => { %> 
                        <div class="card">
                            <div class="card-header">
                            <!-- <a href="/r/< doubt.category >" target="_blank" rel="noopener noreferrer">< doubt.category ></a> -->
                            <a href="/doubts/edit/<%= doubt._id %> ">Edit</a>
                            </div>
                            <div class="card-body">
                              <h5 class="card-title"><%= doubt.title %> </h5>
                              <!-- <p class="card-text">With supporting text below as a natural lead-in to additional content.</p> -->
                              <a href="/doubts/<%= doubt._id %>" class="">View..</a>
                            </div>
                          </div>
                          <br>
                    <% }); %> 
                </div>
            </div>
        </div>


</body>

</html>